@model Employee
@{
    ViewData["Title"] = "Edit";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Employees
                        </p>
                        <form asp-controller="Employee" asp-action="Edit" class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Name</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="FullName">
                                <span class="text-danger my-1" asp-validation-for="FullName"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputAge">Age</label>
                                <input maxlength="" minlength="" type="number" class="form-control" asp-for="Age">
                                <span class="text-danger my-1" asp-validation-for="Age"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPosition">Position</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Position">
                                <span class="text-danger my-1" asp-validation-for="Position"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
